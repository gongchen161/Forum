<% @title =  "Viewing " + @post.title %>

<fieldset>
<h1><%= @post.title %></h1>
  <%= @post.content %> -- <%= link_to(@post.user.first_name, user_path(@post.user)) %>
  <% if session[:level].to_i > 10 %>
  <%= link_to("Delete this post", delete_post_path(@post)) %>
  <% end %>
</fieldset>
  <div id="container">
  <% @post.replies.each do |p| %>
    <fieldset>
      <%= p.content %> -- <%= p.user.first_name %>
      <% if session[:level].to_i > 10 %>
      <%= link_to("Delete this reply", delete_reply_path(p)) %>
      <% end %>
    </fieldset>
<% end %>

  <div>

    <%= form_for(@reply, :url => replies_path(:post_id => @post.id)) do |f| %>
          <table>
            <tr>
              <td><%= f.text_area(:content, :size=>"80x10", :placeholder=>"Add your reply") %></td>
            </tr>
          </table>

          <div class="form-buttons">
            <%= f.submit("Add Reply") %>
          </div>
    <% end %>

  </div>

</div>
