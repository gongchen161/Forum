<% @page_title = "New Subject" %>
<%= link_to("Back to Forum Home", subjects_path) %>

<div>
  <h2>Create A Subject</h2>

  <%= form_for(@subject) do |f| %>

        <table>
          <tr>
            <th><%= f.label(:name) %></th>
            <td><%= f.text_field(:name) %></td>
          </tr>
        </table>


        <div class="form-buttons">
          <%= f.submit("Create Subject") %>
        </div>
  <% end %>

</div>
